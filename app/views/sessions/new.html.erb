<h1>Sign In</h1>

<%= link_to "Back to Products", products_url %>

<%= form_tag sessions_path do %>
	<div>
		<%= label_tag :email %>
		<%= text_field_tag :email, params[:email] %>
	</div>
	<div>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</div>
	<div>
		<%= submit_tag "Sign In" %>
	</div>
<% end %>