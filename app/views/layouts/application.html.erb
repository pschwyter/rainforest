<!DOCTYPE html>
<html>
<head>
  <title>Rainforest</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
	<% end %>
	<% if flash[:alert] %>
		<p><%= flash[:alert] %></p>
	<% end %>

	<%= yield %>

	<div>
		<% if current_user %>
			<p>Signed in as <%= current_user.name %>. <%= link_to "Log out", session_path("current_user"), method: :delete %></p>
		<% else %>
			<%= link_to "Log in", new_session_path %> or <%= link_to "Sign up", new_user_path %>
		<% end %>
	</div>
</body>
</html>
