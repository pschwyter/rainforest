<h1>Products</h1>


<%= link_to "Add Product", new_product_path %>

<h1>Products <small><%= page_entries_info @products %></small></h1>

<hr>

<%= form_tag products_path, method: :get, authentication: false, id: 'search-form' do %>
	<%= text_field_tag :search, params[:search] %>
	<%= submit_tag "Search" %>
<% end %>


<div id="products">
	<ul>
		<%= render @products %>
	</ul>
</div>

<%= paginate @products %>
